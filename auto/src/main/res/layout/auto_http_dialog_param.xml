<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dip"
    android:paddingRight="20dip">

    <EditText android:layout_marginTop="20dip"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="参数描述，用于索引和备忘"
        android:textSize="18dip" />

    <EditText android:layout_marginTop="10dip"
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="参数名字，用于接口对接"
        android:textSize="18dip" />

    <RadioGroup android:id="@+id/type" android:layout_marginTop="20dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:checked="false"
            android:id="@+id/path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路径拼接" />

        <RadioButton android:checked="true"
            android:id="@+id/param"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参数拼接" />
    </RadioGroup>

    <EditText android:layout_marginTop="20dip"
        android:id="@+id/defaultvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="参数默认值"
        android:textSize="18dip" />

    <Button android:layout_marginTop="20dip"
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dip"
        android:text="确认"
        android:textSize="18dip" />
</LinearLayout>